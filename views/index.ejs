<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortner</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="css/style.css" type="text/css" />
</head>

<body>
    <div class="container">

        <h1>URL Shrinker</h1>
        <form action="/shortUrls" method="post" class="my-4 form-inline">
            <input placeholder="Enter full url" type="url" name="fullUrl" id="fullUrl" required
                class="form-control col mr-2">
            <button class="btn btn-success" type="submit">Shrink</button>
        </form>

        <table class="">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl=>{ %>
                    <tr>
                        <td><a href="<%= shortUrl.full %>">
                                <%= shortUrl.full %>
                            </a></td>
                        <td><a href="<%= shortUrl.short %>">
                                <%= shortUrl.short %>
                            </a></td>
                        <td>
                            <%= shortUrl.clicks %>
                        </td>
                        <td>
                            <form action="/shortUrls/<%= shortUrl._id %>/delete" method="post">
                                <input type="hidden" name="_method" value="DELETE">
                                <!-- For overriding POST method with DELETE -->
                                <button type="submit" class="material-symbols-outlined delete_icon"
                                    onclick="return confirm('Are you sure you want to delete this URL?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
        crossorigin="anonymous"></script>

</body>

</html>